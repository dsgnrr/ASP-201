@model ASP_201.Models.Forum.ForumTopicViewModel
<div class="col">
    <div class="card">
        <div class="card-header p-1">
            <div class="media d-flex align-items-center">
                <img src="@Model.AuthorAvatarUrl" style="max-height: 40px; max-width: 100px" class="d-block ui-w-40 rounded-circle mx-2" alt="">
                <div class="media-body mx-2">
                    <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.Author.Login" data-abc="true">@Model.AuthorName</a>
                    <div class="text-muted small">@Model.CreatedDtString</div>
                </div>
                <div class="ms-auto text-muted small mx-2">
                    <div>Member since <strong>@Model.AuthorRegistrationDate</strong></div>
                    <div><strong>134</strong> posts</div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            <a asp-action="Topics" asp-route-id="@Model.UrlIdString"
                class="float-end">Обговорення</a>
        </div>
    </div>
</div>
